<footer id="footer">
  <% if (theme.sidebar === 'bottom'){ %>
    <%- partial('_partial/sidebar') %>
  <% } %>
  <div class="outer">
    <div id="footer-info" class="inner">
      &copy; <%= date(new Date(), 'YYYY') %> - 永远。爱你 <span id="loving-days"><%= 1 + (new Date() - new Date(2016, 11, 2)) / 86400000 | 0 %></span> 天的<%= config.author || config.title %><br>
    </div>
    <script>
      (function () {
        var el = document.getElementById('loving-days')
        setInterval(function ()　{
          el.innerText = 1 + ((new Date() - new Date(2016, 11, 2)) / 86400000 | 0)
        }, 1000)
      })()
    </script>
  </div>
</footer>